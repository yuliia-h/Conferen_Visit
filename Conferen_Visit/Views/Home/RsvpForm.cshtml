@model Conferen_Visit.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RsvpForm</title>
    <link rel="stylesheet" href="~/Content/Styles.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />
</head>
<body style="background-color: #1f1d2a">
    <div class="panel-success text-center">
        <div class="panel-heading">
            <h2>Registration</h2>
        </div>
        <div class="panel-body" style="align-self:center">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group" style="width:250px; margin-left:100px">
                    <label>Your name:</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group" style="width:250px; margin-left:100px">
                    <label>Your email:</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </div>
                <div class="form-group" style="width: 250px;
        margin-left: 100px
    ">
                    <label>Your phone:</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                </div>
                <div class="form-group" style="width:250px; margin-left:100px">
                    <label>Sex:</label>
                    @Html.DropDownListFor(x => x.WillAttend, new[] {
                           new SelectListItem(){Text = "Male", Value=Boolean.TrueString },
                           new SelectListItem() {Text ="Female", Value=Boolean.TrueString }
                      }, "Select option", new { @class = "form-control" })
                </div>
                <div class="text-center" style="width:250px; margin-left:100px" >
                    <input type="submit" value="Sent form RSVP" class="btn btn-success" />
                </div>
            }
        </div>
    </div>
</body>
</html>
